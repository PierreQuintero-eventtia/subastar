




<div class="owl-carousel owl-theme">

  <% auctions.each do |auction| %>
  <div class="col-sm-12 item">
    <div class="row d-flex justify-content-center">
      <div class="card border-0 ">
              <div class="row set-p justify-content-center">
                  <div class="col-sm-4 px-0"> <%= image_tag auction.product.image, class:"image" %> </div>
                  <div class="col-sm-8">
                      <div class="row px-3 mt-4 mb-3">
                          <p class="rating2 mb-0 px-2 mr-3 <%=auction.product.category.color%> "><strong><%=auction.product.category.name%></strong></p>
                          <p class="text-primary mb-0 mr-2 grade"><strong><%=auction.bids.count%> pujas</strong></p>
                          <p class="text-secondary mb-0 mr-2">&middot;</p>
                          
                      </div>
                      <div class="row px-3">
                          <h3 class="font-weight-bold title-fet"><%= auction.title %></h3>
                      </div>
                     
                      
                         <% if auction.completed?%>
                          <div class="line"></div>
                      <div class="row px-3 mt-3">
                          <h5 class="text-secondary2 mb-1">Puja Ganadora</h5>
                      </div>
                      <div class="row px-3">
                            <h2 class="text-success mb-1 font-weight-bold price">$<%= last_bid auction %></h2>
                         <%else%>
                      <div class="line"></div>
                      <div class="row px-3 mt-3">
                          <h5 class="text-secondary2 mb-1">Precio Inicial</h5>
                      </div>
                      <div class="row px-3">
                          <h2 class="text-success mb-1 font-weight-bold price">$<%= auction.initial_price %></h2>
                          <%end%>
                      </div>
                      
                      <div class="d-flex justify-content-between align-items-center mx-1">
                        
                        
                        <div class="my-3 d-flex ml-auto" >
                        <%= link_to 'Pujar', auction, class:"btn btn-outline-success button-search ", type:"button" %>
                        
                        
                      </div>
                      
                      </div>
                      
                      
                      
                          
                  </div>
                  
              </div>
          </div>
  
    </div>
    
  </div>
  <% end %>
</div>

<div class="owl-nav text-center">

       
</div>
</div>