
    <div class="row d-flex justify-content-center">
      <div class="col-sm-12 d-flex justify-content-center">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left d-none d-md-flex">
             <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body">
            <h5 class="card-title text-center title-sign">Ingresa</h5>
            
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
              
              <div class="form-label-group">
                <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email address" %>
                
                
              </div>
              
              <hr>

              <div class="form-label-group">
              <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
                
               
              </div>
              
             
              <%= f.submit "Ingresar" , class:"btn btn-lg btn-primary btn-block text-uppercase btn-form btnn"%>
              
              <%= link_to 'Quieres registrarte?', new_user_registration_path, class:"d-block text-center mt-4 small want-it" %>
              
              <hr class="my-4">
               <%= link_to 'Ingresa con Google', user_google_oauth2_omniauth_authorize_path, class:"btn btn-lg btn-google btn-block text-uppercase btnn" %>
              
            <% end %>
            
            
          </div>
        </div>
      </div>
    </div>
  




